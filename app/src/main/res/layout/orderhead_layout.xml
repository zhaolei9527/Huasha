<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y8"
                android:background="#f7f7f7"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y35"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi,"
                    android:textColor="#666666"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sakura"
                    android:textColor="#f86201"
                    android:textSize="@dimen/x14" />
            </LinearLayout>


            <View
                android:layout_width="@dimen/y270"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"
                android:background="#d2d2d2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y35"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order number : "
                    android:textColor="#444444"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017123456789"
                    android:textColor="#444444"
                    android:textSize="@dimen/x14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50"
                android:background="#f7f7f7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="@dimen/x67"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#666666"
                        android:textSize="@dimen/y11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-1"
                        android:textColor="#666666"
                        android:textSize="@dimen/y9" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="2px"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="#f86201"></View>

                    <ImageView
                        android:layout_width="@dimen/y20"
                        android:layout_height="@dimen/y20"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/xiadan" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x6"
                    android:text="Place the order"
                    android:textColor="#444444"
                    android:textSize="@dimen/x14" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
