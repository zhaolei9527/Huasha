<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:layout_marginTop="6dp"
    android:background="#ededed"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40">

            <ImageView
                android:id="@+id/img_state"
                android:layout_width="@dimen/y23"
                android:layout_height="@dimen/y23"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:background="@mipmap/state" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x3"
                android:layout_toRightOf="@id/img_state"
                android:text="Order status"
                android:textColor="#666666"
                android:textSize="@dimen/y13" />

            <TextView
                android:gravity="end"
                android:id="@+id/tv_type"
                android:singleLine="true"
                android:layout_width="@dimen/y115"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:text="Start Production"
                android:textColor="#f86201"
                android:textSize="@dimen/y13" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y63"
            android:orientation="vertical"
            android:paddingLeft="@dimen/y10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order number : "
                    android:textColor="#444444"
                    android:textSize="@dimen/y13" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017123456789"
                    android:textColor="#444444"
                    android:textSize="@dimen/y13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delyvery time : "
                    android:textColor="#444444"
                    android:textSize="@dimen/y13" />

                <TextView
                    android:id="@+id/tv_delyverytime_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-8-12"
                    android:textColor="#444444"
                    android:textSize="@dimen/y13" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d2d2d2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="#f6f6f8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/y10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order time : "
                android:textColor="#999999"
                android:textSize="@dimen/y12" />

            <TextView
                android:id="@+id/tv_ordertime_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-8-12"
                android:textColor="#999999"
                android:textSize="@dimen/y12" />
X
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>