<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/y15"
                android:layout_marginLeft="@dimen/x9"
                android:layout_marginTop="@dimen/y12"
                android:background="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Change Password"
                android:textColor="#333333"
                android:textSize="@dimen/x18" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y8"
            android:background="#f7f7f7"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x9"
                android:text="Old Password :"
                android:textColor="#454545"
                android:textSize="@dimen/x18" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <EditText
            android:id="@+id/et_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y37"
            android:layout_marginLeft="@dimen/x9"
            android:background="@null"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="#999"
            android:textSize="@dimen/x15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x9"
                android:text="New Password :"
                android:textColor="#454545"
                android:textSize="@dimen/x18" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:textSize="@dimen/x15"
            android:layout_height="@dimen/y37"
            android:layout_marginLeft="@dimen/x9"
            android:background="@null"
            android:hint="New Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="#999" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x9"
                android:text="Confirm Password :"
                android:textColor="#454545"
                android:textSize="@dimen/x18" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <EditText
            android:id="@+id/et_confirmpassword"
            android:layout_width="match_parent"
            android:textSize="@dimen/x15"
            android:layout_height="@dimen/y37"
            android:layout_marginLeft="@dimen/x9"
            android:background="@null"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="#999" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"></View>

        <Button
            android:textSize="@dimen/x15"
            android:textAllCaps="false"
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:layout_marginTop="@dimen/y38"
            android:background="@drawable/btn_changepwd"
            android:text="Detetmine"
            android:textColor="#ffffff" />

    </LinearLayout>
</FrameLayout>
